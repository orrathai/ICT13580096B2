<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="ICT13580096B2.MainPage"
    Title="Fashion Shop">

    <ContentPage.ToolbarItems>

        <ToolbarItem
            Text="New"
            x:Name="newButton"/>

    </ContentPage.ToolbarItems>

    <ListView
        x:Name="productListView"
        RowHeight="100">

        <ListView.ItemTemplate>

            <DataTemplate>
                
                <ViewCell>
                    

                    <ViewCell.ContextActions>

                        <MenuItem
                            Text="แก้ไข"
                            Clicked="Edit_Clicked"
                            CommandParameter="{Binding .}"/>
                        
                        <MenuItem
                            Text="ลบ"
                            IsDestructive="true"
                            Clicked="Delete_Clicked"
                            CommandParameter="{Binding .}"/>

                    </ViewCell.ContextActions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Image
                          BackgroundColor="Green"/>
                        <StackLayout
                            Grid.Column="1"
                            Orientation="Vertical">

                        <Label
                            Text="{Binding Name}"
                            FontAttributes="Bold"
                            TextColor="Navy"/>

                        <Label
                             Text="{Binding Descriptions}"
                             LineBreakMode="TailTruncation"/>

                         <Label
                             Text="{Binding ProductPrice,StringFormat='ราคาขาย {0:0}บาท'}"/>

                         <Label
                             Text="{Binding Strock,StringFormat='สินค้าคงเหลือ:{0}ชิ้น'}" />
                           
                        </StackLayout>

                        <Button
                            Text="+"
                            FontSize="30"
                            Grid.Column="2"
                            VerticalOptions="End"
                            HeightRequest="50"
                            BackgroundColor="Silver"/>
                    </Grid>

                </ViewCell>
                
            </DataTemplate>
            
        </ListView.ItemTemplate>
            
    </ListView>
</ContentPage>
